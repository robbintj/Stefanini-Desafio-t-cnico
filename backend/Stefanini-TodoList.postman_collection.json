{
  "info": {
    "name": "Stefanini Todo List API",
    "description": "Collection completa para testar a API de gerenciamento de tarefas",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080/api",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Tarefas",
      "item": [
        {
          "name": "Listar Todas as Tarefas",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/tarefas",
              "host": ["{{baseUrl}}"],
              "path": ["tarefas"]
            },
            "description": "Retorna lista com todas as tarefas cadastradas, ordenadas por data de criação (mais recentes primeiro)"
          },
          "response": []
        },
        {
          "name": "Buscar Tarefa por ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/tarefas/1",
              "host": ["{{baseUrl}}"],
              "path": ["tarefas", "1"]
            },
            "description": "Busca uma tarefa específica pelo ID. Retorna 404 se não encontrada."
          },
          "response": []
        },
        {
          "name": "Listar Tarefas por Status - PENDENTE",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/tarefas/status/PENDENTE",
              "host": ["{{baseUrl}}"],
              "path": ["tarefas", "status", "PENDENTE"]
            },
            "description": "Lista todas as tarefas com status PENDENTE"
          },
          "response": []
        },
        {
          "name": "Listar Tarefas por Status - EM_ANDAMENTO",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/tarefas/status/EM_ANDAMENTO",
              "host": ["{{baseUrl}}"],
              "path": ["tarefas", "status", "EM_ANDAMENTO"]
            },
            "description": "Lista todas as tarefas com status EM_ANDAMENTO"
          },
          "response": []
        },
        {
          "name": "Listar Tarefas por Status - CONCLUIDA",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/tarefas/status/CONCLUIDA",
              "host": ["{{baseUrl}}"],
              "path": ["tarefas", "status", "CONCLUIDA"]
            },
            "description": "Lista todas as tarefas com status CONCLUIDA"
          },
          "response": []
        },
        {
          "name": "Criar Nova Tarefa",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"titulo\": \"Implementar autenticação\",\n  \"descricao\": \"Adicionar Spring Security com JWT\",\n  \"status\": \"PENDENTE\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tarefas",
              "host": ["{{baseUrl}}"],
              "path": ["tarefas"]
            },
            "description": "Cria uma nova tarefa. Título é obrigatório (3-100 caracteres). Status padrão é PENDENTE se não informado."
          },
          "response": []
        },
        {
          "name": "Atualizar Tarefa",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"titulo\": \"Implementar autenticação - Atualizado\",\n  \"descricao\": \"Adicionar Spring Security com JWT e OAuth2\",\n  \"status\": \"EM_ANDAMENTO\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tarefas/1",
              "host": ["{{baseUrl}}"],
              "path": ["tarefas", "1"]
            },
            "description": "Atualiza uma tarefa existente. Todos os campos são obrigatórios. Retorna 404 se tarefa não encontrada."
          },
          "response": []
        },
        {
          "name": "Deletar Tarefa",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/tarefas/1",
              "host": ["{{baseUrl}}"],
              "path": ["tarefas", "1"]
            },
            "description": "Deleta uma tarefa pelo ID. Retorna 204 (No Content) em caso de sucesso, 404 se não encontrada."
          },
          "response": []
        }
      ],
      "description": "Endpoints para gerenciamento de tarefas (CRUD completo)"
    },
    {
      "name": "Exemplos de Validação",
      "item": [
