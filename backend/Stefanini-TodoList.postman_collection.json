            },
            "url": {
              "raw": "{{baseUrl}}/tarefas",
              "host": ["{{baseUrl}}"],
              "path": ["tarefas"]
            },
            "description": "Teste de validação: título com menos de 3 caracteres deve retornar erro 400"
          },
          "response": []
        },
        {
          "name": "Erro - Status inválido",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"titulo\": \"Tarefa de teste\",\n  \"descricao\": \"Teste de validação\",\n  \"status\": \"INVALIDO\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tarefas",
              "host": ["{{baseUrl}}"],
              "path": ["tarefas"]
            },
            "description": "Teste de validação: status inválido deve retornar erro 400"
          },
          "response": []
        },
        {
          "name": "Erro - Tarefa não encontrada",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/tarefas/9999",
              "host": ["{{baseUrl}}"],
              "path": ["tarefas", "9999"]
            },
            "description": "Teste de erro 404: buscar tarefa inexistente"
          },
          "response": []
        }
      ],
      "description": "Exemplos de requisições que geram erros de validação para testar o sistema de exceções"
    },
